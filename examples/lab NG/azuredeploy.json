{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.4.0.0",
  "parameters": {
		"GW_Internal": {
      "type": "string",
      "defaultValue": "Palo",
      "allowedValues": [
        "Palo",
        "F5",
        "Forti",
        "AWS"
      ],
      "metadata": {
        "description": "Default Gateway on Internal subnet"
      }
		},
    "Palo": {
      "type": "bool",
      "defaultValue": true,
      "metadata": {
        "description": "Provision Palo Alto NGFW"
      }
    },
    "PaloPosition": {
      "type": "string",
      "defaultValue": "Ext2Int",
      "allowedValues": [
        "Ext2Int",
        "Ext2DMZ",
        "DMZ2Int"
      ],
      "metadata": {
        "description": "Palo Alto NGFW Position"
      }
    },
    "F5": {
      "type": "bool",
      "defaultValue": true,
      "metadata": {
        "description": "Provision F5 LB"
      }
    },
    "F5Position": {
      "type": "string",
      "defaultValue": "Ext2Int",
      "allowedValues": [
        "Ext2Int",
        "Ext2DMZ",
        "DMZ2Int"
      ],
      "metadata": {
        "description": "F5 Position"
      }
    },
    "Forti": {
      "type": "bool",
      "defaultValue": true,
      "metadata": {
        "description": "Provision "
      }
    },
    "FortiPosition": {
      "type": "string",
      "defaultValue": "Ext2Int",
      "allowedValues": [
        "Ext2Int",
        "Ext2DMZ",
        "DMZ2Int"
      ],
      "metadata": {
        "description": "Fortinet Proxy Position"
      }
    },
    "APP1": {
      "type": "bool",
      "defaultValue": true,
      "metadata": {
        "description": "Provision App Server 1"
      }
    },
    "APP1Docker": {
      "type": "string",
      "defaultValue": "",
      "allowedValues": [
        "",
        "karthequian/gruyere:latest",
        "owasp/security-shepherd:latest"
      ],
      "metadata": {
        "description": "Provision docker on App Server 1"
      }
    },
    "APP2Docker": {
      "type": "string",
      "defaultValue": "",
      "allowedValues": [
        "",
        "karthequian/gruyere:latest",
        "owasp/security-shepherd:latest"
      ],
      "metadata": {
        "description": "Provision docker on App Server 2"
      }
    }
  },
  "variables": {
    "numNics": 2,
    "numSubnets": 4,
    "useAvailabilityZones": false,
    "templateBaseUrl": "https://raw.githubusercontent.com/oncledave01/f5-azure-arm-templates-v2/",
    "artifactLocation": "main/examples/",
	"PaloRuntimeInitConfig": "https://raw.githubusercontent.com/oncledave01/f5-azure-arm-templates-v2/main/examples/LAB%20NG/configs/Palo/init-cfg.txt",
	"PaloRuntimeInitPackageUrl": "https://raw.githubusercontent.com/oncledave01/f5-azure-arm-templates-v2/main/examples/LAB%20NG/configs/Palo/init-package.txt",
    "restrictedSrcAddressMgmt": "*",
    "restrictedSrcAddressApp": "*",
    "contentVersion": "[deployment().properties.template.contentVersion]",
    "uniqueString": "rds",
    "adminUsername": "[string('azureuser')]",
    "adminPassword": "[string('sports-lionize-DOCTRINE1')]",
    "vnetName": "[concat(variables('uniqueString'), '-vnet')]",
    "vnetAddressPrefix": "10.0",
	"tagValues": [
      {
      "application": "APP",
      "cost": "COST",
      "environment": "ENV",
      "group": "GROUP",
      "owner": "OWNER"
      }
    ],
    "mgmtNsgRulesArray": [
      {
        "destinationPortRanges": [
          "22",
          "[if(equals(variables('numNics'), 1), '8443', '443')]"
        ],
        "sourceAddressPrefix": "[variables('restrictedSrcAddressMgmt')]",
        "protocol": "Tcp"
      }
    ],
    "nsg1RulesArray": [
      {
        "destinationPortRanges": [
          "80",
          "443"
        ],
        "sourceAddressPrefix": "[variables('restrictedSrcAddressApp')]",
        "protocol": "Tcp"
      },
      {
        "destinationPortRanges": [
          "80",
          "443"
        ],
        "sourceAddressPrefix": "10.0.0.0/8",
        "protocol": "Tcp"
      }
    ],
    "nsg2RulesArray": [
      {
        "destinationPortRanges": [
          "80",
          "443"
        ],
        "sourceAddressPrefix": "[variables('restrictedSrcAddressApp')]",
        "protocol": "Tcp"
      },
      {
        "destinationPortRanges": [
          "80",
          "443"
        ],
        "sourceAddressPrefix": "10.0.0.0/8",
        "protocol": "Tcp"
      }
    ],
    "nsg0": "[if(equals(variables('numNics'), 1), union(variables('mgmtNsgRulesArray'), variables('nsg1RulesArray'), variables('nsg2RulesArray')), variables('mgmtNsgRulesArray'))]",
    "nsg1": "[if(greaterOrEquals(variables('numNics'), 2), variables('nsg1RulesArray'), createArray())]",
    "nsg2": "[if(greaterOrEquals(variables('numNics'), 3), variables('nsg2RulesArray'), createArray())]",
    "appInstanceName": "[variables('uniqueString')]",
    "appInstanceType": "Standard_D2s_v3",
    "cloudInitUrl": "",
    "mgmtSelfIpF5": "10.0.0.11",
    "nic1SelfIpF5": "10.0.1.11",
    "nic2SelfIpF5": "10.0.2.11",
    "nic1ServiceIPSubnetIndex": "[if(equals(variables('numNics'), 1), '0', '1')]",
    "nic1ServiceIP1": "[concat('10.0.', variables('nic1ServiceIPSubnetIndex'), '.20')]",
    "vmNameF5": "[concat(variables('uniqueString'), '-bigip-vm')]",
    "PaloImage": "paloaltonetworks:byol:vmseries-flex:latest",
    "PaloInstanceType": "Standard_D3_v2",
    "mgmtSelfIpPalo": "10.0.0.4",
    "nic1SelfIpPalo": "10.0.1.4",
    "nic2SelfIpPalo": "10.0.2.4",
    "vmNamePalo" :"[concat(variables('uniqueString'), '-palo-vm')]",
    "sshKey": "ssh-rsa  admin@MBP-Dave.rd-services.eu",

  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "networkTemplate",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('templateBaseUrl'), variables('artifactLocation'), 'modules/network/network.json')]",
          "contentVersion": "[variables('contentVersion')]"
        },
        "parameters": {
          "numSubnets": {
            "value": "[variables('numSubnets')]"
          },
          "vnetName": {
            "value": "[variables('vnetName')]"
          },
          "vnetAddressPrefix": {
            "value": "[variables('vnetAddressPrefix')]"
          },
          "createNatGateway": {
            "value": false
          },
          "tagValues": {
            "value": "[variables('tagValues')]"
          }
        }
      }
    }
  ],
  "outputs": {
    "virtualNetworkId": {
      "type": "string",
      "value": "[reference('networkTemplate').outputs.virtualNetwork.value]"
    }
  }
}
