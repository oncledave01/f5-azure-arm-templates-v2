{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.4.0.0",
    "outputs": {
        "virtualNetworkId": {
            "type": "string",
            "value": "[reference('networkTemplate').outputs.virtualNetwork.value]"
        }
    },
    "parameters": {
        "APP1": {
            "defaultValue": true,
            "metadata": {
                "description": "Provision App Server 1"
            },
            "type": "bool"
        },
        "APP1Docker": {
            "allowedValues": [
                "",
                "karthequian/gruyere:latest",
                "owasp/security-shepherd:latest"
            ],
            "defaultValue": "",
            "metadata": {
                "description": "Provision docker on App Server 1"
            },
            "type": "string"
        },
        "APP2": {
            "defaultValue": false,
            "metadata": {
                "description": "Provision App Server 2"
            },
            "type": "bool"
        },
        "APP2Docker": {
            "allowedValues": [
                "",
                "karthequian/gruyere:latest",
                "owasp/security-shepherd:latest"
            ],
            "defaultValue": "",
            "metadata": {
                "description": "Provision docker on App Server 2"
            },
            "type": "string"
        },
        "F5": {
            "defaultValue": true,
            "metadata": {
                "description": "Provision F5 LB"
            },
            "type": "bool"
        },
        "F5Position": {
            "allowedValues": [
                "Ext2Int",
                "Ext2DMZ",
                "DMZ2Int"
            ],
            "defaultValue": "Ext2Int",
            "metadata": {
                "description": "F5 Position"
            },
            "type": "string"
        },
        "Forti": {
            "defaultValue": true,
            "metadata": {
                "description": "Provision "
            },
            "type": "bool"
        },
        "FortiPosition": {
            "allowedValues": [
                "Ext2Int",
                "Ext2DMZ",
                "DMZ2Int"
            ],
            "defaultValue": "Ext2Int",
            "metadata": {
                "description": "Fortinet Proxy Position"
            },
            "type": "string"
        },
        "GW_Internal": {
            "allowedValues": [
                "Palo",
                "F5",
                "Forti",
                "AWS"
            ],
            "defaultValue": "Palo",
            "metadata": {
                "description": "Default Gateway on Internal subnet"
            },
            "type": "string"
        },
        "Palo": {
            "defaultValue": true,
            "metadata": {
                "description": "Provision Palo Alto NGFW"
            },
            "type": "bool"
        },
        "PaloPosition": {
            "allowedValues": [
                "Ext2Int",
                "Ext2DMZ",
                "DMZ2Int"
            ],
            "defaultValue": "Ext2Int",
            "metadata": {
                "description": "Palo Alto NGFW Position"
            },
            "type": "string"
        }
    },
    "resources": [
        {
            "apiVersion": "2021-04-01",
            "name": "networkTemplate",
            "properties": {
                "mode": "Incremental",
                "parameters": {
                    "GW_Internal": {
                        "value": "[parameters('GW_Internal')]"
                    },
                    "numSubnets": {
                        "value": 4
                    },
                    "tagValues": {
                        "value": "[variables('tagValues')]"
                    },
                    "vnetAddressPrefix": {
                        "value": "[variables('vnetAddressPrefix')]"
                    },
                    "vnetName": {
                        "value": "[variables('vnetName')]"
                    }
                },
                "templateLink": {
                    "contentVersion": "[variables('contentVersion')]",
                    "uri": "[concat(variables('templateBaseUrl'), variables('artifactLocation'), 'modules/network/network-ng.json')]"
                }
            },
            "type": "Microsoft.Resources/deployments"
        },
        {
            "apiVersion": "2021-04-01",
            "dependsOn": [
                "networkTemplate"
            ],
            "name": "dagTemplate",
            "properties": {
                "mode": "Incremental",
                "parameters": {
                    "nsg0": {
                        "value": "[variables('nsg0')]"
                    },
                    "nsg1": {
                        "value": "[variables('nsg1')]"
                    },
                    "nsg2": {
                        "value": "[variables('nsg2')]"
                    },
                    "numberPublicExternalIpAddresses": {
                        "value": 1
                    },
                    "numberPublicMgmtIpAddresses": {
                        "value": "[if(parameters('Palo'), if(parameters('F5'), if(parameters('Forti'), 3, 2), if(parameters('Forti'), 2, 1)), if(parameters('F5'), if(parameters('Forti'), 2, 1), if(parameters('Forti'), 1, 0)))]"
                    },
                    "tagValues": {
                        "value": "[variables('tagValues')]"
                    },
                    "uniqueString": {
                        "value": "[variables('uniqueString')]"
                    }
                },
                "templateLink": {
                    "contentVersion": "[variables('contentVersion')]",
                    "uri": "[concat(variables('templateBaseUrl'), variables('artifactLocation'), 'modules/dag/dag.json')]"
                }
            },
            "type": "Microsoft.Resources/deployments"
        },
        {
            "apiVersion": "2021-04-01",
            "condition": "[parameters('APP1')]",
            "dependsOn": [
                "networkTemplate",
                "dagTemplate"
            ],
            "name": "appTemplate",
            "properties": {
                "mode": "Incremental",
                "parameters": {
                    "adminPassword": {
                        "value": "[variables('adminPassword')]"
                    },
                    "adminUsername": {
                        "value": "[variables('adminUsername')]"
                    },
                    "appContainerName": {
                        "value": "[parameters('APP1Docker')]"
                    },
                    "cloudInitUrl": {
                        "value": "[variables('APP1cloudInitUrl')]"
                    },
                    "createAutoscaleGroup": {
                        "value": false
                    },
                    "instanceName": {
                        "value": "APP1"
                    },
                    "instanceType": {
                        "value": "[variables('appInstanceType')]"
                    },
                    "nsgId": {
                        "value": "[reference('dagTemplate').outputs.nsg1Id.value]"
                    },
                    "sshKey": {
                        "value": "[variables('sshKey')]"
                    },
                    "subnetId": {
                        "value": "[reference('networkTemplate').outputs.subnets.value[3]]"
                    },
                    "tagValues": {
                        "value": "[variables('tagValues')]"
                    }
                },
                "templateLink": {
                    "contentVersion": "[variables('contentVersion')]",
                    "uri": "[concat(variables('templateBaseUrl'), variables('artifactLocation'), 'modules/application/application.json')]"
                }
            },
            "type": "Microsoft.Resources/deployments"
        },
        {
            "apiVersion": "2021-04-01",
            "condition": "[parameters('APP2')]",
            "dependsOn": [
                "networkTemplate",
                "dagTemplate"
            ],
            "name": "appTemplate",
            "properties": {
                "mode": "Incremental",
                "parameters": {
                    "adminPassword": {
                        "value": "[variables('adminPassword')]"
                    },
                    "adminUsername": {
                        "value": "[variables('adminUsername')]"
                    },
                    "appContainerName": {
                        "value": "[parameters('APP2Docker')]"
                    },
                    "cloudInitUrl": {
                        "value": "[variables('APP2cloudInitUrl')]"
                    },
                    "createAutoscaleGroup": {
                        "value": false
                    },
                    "instanceName": {
                        "value": "APP2"
                    },
                    "instanceType": {
                        "value": "[variables('appInstanceType')]"
                    },
                    "nsgId": {
                        "value": "[reference('dagTemplate').outputs.nsg1Id.value]"
                    },
                    "sshKey": {
                        "value": "[variables('sshKey')]"
                    },
                    "subnetId": {
                        "value": "[reference('networkTemplate').outputs.subnets.value[3]]"
                    },
                    "tagValues": {
                        "value": "[variables('tagValues')]"
                    }
                },
                "templateLink": {
                    "contentVersion": "[variables('contentVersion')]",
                    "uri": "[concat(variables('templateBaseUrl'), variables('artifactLocation'), 'modules/application/application.json')]"
                }
            },
            "type": "Microsoft.Resources/deployments"
        }
    ],
    "variables": {
        "adminPassword": "[string('sports-lionize-DOCTRINE1')]",
        "adminUsername": "[string('azureuser')]",
        "APP1cloudInitUrl": "https://raw.githubusercontent.com/oncledave01/f5-azure-arm-templates-v2/main/examples/LAB%20NG/configs/APP1/init-cfg.txt",
        "APP2cloudInitUrl": "https://raw.githubusercontent.com/oncledave01/f5-azure-arm-templates-v2/main/examples/LAB%20NG/configs/APP2/init-cfg.txt",
        "appInstanceType": "Standard_D2s_v3",
        "artifactLocation": "main/examples/",
        "contentVersion": "[deployment().properties.template.contentVersion]",
        "mgmtNsgRulesArray": [
            {
                "destinationPortRanges": [
                    "22",
                    "443"
                ],
                "protocol": "Tcp",
                "sourceAddressPrefix": "*"
            }
        ],
        "nsg0": "[variables('mgmtNsgRulesArray')]",
        "nsg1": "[variables('nsg1RulesArray')]",
        "nsg1RulesArray": [
            {
                "destinationPortRanges": [
                    "80",
                    "443"
                ],
                "protocol": "Tcp",
                "sourceAddressPrefix": "*"
            },
            {
                "destinationPortRanges": [
                    "80",
                    "443"
                ],
                "protocol": "Tcp",
                "sourceAddressPrefix": "10.0.0.0/8"
            }
        ],
        "nsg2": "[variables('nsg2RulesArray')]",
        "nsg2RulesArray": [
            {
                "destinationPortRanges": [
                    "80",
                    "443"
                ],
                "protocol": "Tcp",
                "sourceAddressPrefix": "*"
            },
            {
                "destinationPortRanges": [
                    "80",
                    "443"
                ],
                "protocol": "Tcp",
                "sourceAddressPrefix": "10.0.0.0/8"
            }
        ],
        "sshKey": "ssh-rsa  admin@MBP-Dave.rd-services.eu",
        "tagValues": {
            "application": "APP",
            "cost": "COST",
            "environment": "ENV",
            "group": "GROUP",
            "owner": "OWNER"
        },
        "templateBaseUrl": "https://raw.githubusercontent.com/oncledave01/f5-azure-arm-templates-v2/",
        "uniqueString": "rds",
        "vnetAddressPrefix": "10.0",
        "vnetName": "[concat(variables('uniqueString'), '-vnet')]"
    }
}
